<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".booking.BookingActivity"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/drawerLB">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/action_bar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center"
            android:paddingTop="40dp"
            android:layout_weight="1">

            <!--        Card view-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"            >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/splash"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/loc_pin"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Boarding point Accra (10:00)"
                                android:textColor="@color/black"
                                android:layout_marginTop="2dp"
                                android:textSize="13sp"
                                android:fontFamily="@font/poppins"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/loc_pin_green"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginTop="2dp"
                                android:textSize="13sp"
                                android:text="Dropping point Kumasi (10:00)"
                                android:fontFamily="@font/poppins"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/calendar"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginTop="2dp"
                                android:textSize="13sp"
                                android:text="February 28, 2022"
                                android:fontFamily="@font/poppins"/>

                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type : AC"
                            android:textColor="@color/black"
                            android:layout_marginTop="2dp"
                            android:textSize="13sp"
                            android:fontFamily="@font/poppins"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="40dp"
                    android:text="SEATS"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:layout_gravity="center"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="85dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Adult"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins" />

                            <TextView
                                android:layout_width="85dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:gravity="center"
                                android:text="Child"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins" />

                            <TextView
                                android:layout_width="85dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:gravity="center"
                                android:text="Infant"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                                android:layout_width="85dp"
                                android:layout_height="wrap_content">

                                <AutoCompleteTextView
                                    android:id="@+id/adult"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:inputType="none"
                                    android:text="@string/_0"
                                    android:fontFamily="@font/poppins"
                                    android:padding="0dp"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                                android:layout_width="85dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp">

                                <AutoCompleteTextView
                                    android:id="@+id/child"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:inputType="none"
                                    android:text="@string/_0"
                                    android:fontFamily="@font/poppins"
                                    android:padding="0dp"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                                android:layout_width="85dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp">

                                <AutoCompleteTextView
                                    android:id="@+id/infant"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:inputType="none"
                                    android:text="@string/_0"
                                    android:fontFamily="@font/poppins"
                                    android:padding="2dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/wheelchair"
                                android:contentDescription="@string/disabled" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp">

                                <AutoCompleteTextView
                                    android:id="@+id/diabled"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:inputType="none"
                                    android:text="@string/_0"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/poppins"
                                    android:padding="0dp"
                                    tools:ignore="TouchTargetSizeCheck" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/woman"
                                android:contentDescription="@string/pregnant"
                                android:layout_marginStart="15dp"/>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="3dp">

                                <AutoCompleteTextView
                                    android:id="@+id/pregnant"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:inputType="none"
                                    android:text="@string/_0"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/poppins"
                                    android:padding="0dp"
                                    tools:ignore="TouchTargetSizeCheck" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="30dp"
                    android:text="GHc 0.00"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:fontFamily="@font/poppins" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/orange"
                    android:text="CONFIRM BOOKING"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:id="@+id/navViewB"/>

</androidx.drawerlayout.widget.DrawerLayout>